<%# app/views/rooms/edit.html.erb %>
<h1>ゲストハウスの編集</h1>

<%= form_with(model: @room, local: true, url: room_path(@room), method: :patch) do |form| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% @room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ゲストハウス名 %>
    <%= form.text_field :name, id: :room_name %>
  </div>

  <div class="field">
    <%= form.label :説明 %>
    <%= form.text_area :description, id: :room_description %>
  </div>

  <div class="field">
    <%= form.label :１日あたりの料金 %>
    <%= form.number_field :price, id: :room_price %>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address, id: :room_address %>
  </div>

  <div class="field">
    <%= form.label :画像 %>
    <%= form.file_field :画像, id: :room_image %>
  </div>

  <div class="actions">
    <%= form.submit "変更を保存" %>
    <%= link_to 'キャンセル', my_rooms_path, class: "btn btn-secondary" %>
  </div>
<% end %>
